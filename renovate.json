{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":separateMultipleMajorReleases",
        ":enableVulnerabilityAlerts"
    ],
    "customManagers": [
        {
            "customType": "jsonata",
            "fileFormat": "json",
            "managerFilePatterns": [
                "/package.json/"
            ],
            "matchStrings": [
                "$each(devEngines.runtime, function($v, $k) { {\"depName\":$v.name, \"currentValue\": $v.version, \"depType\": \"devDependencies\"}})"
            ],
            "datasourceTemplate": "npm"
        }
    ]
}