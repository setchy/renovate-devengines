{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":separateMultipleMajorReleases",
        ":enableVulnerabilityAlerts"
    ],
    "customManagers": [
        {
            "customType": "jsonata",
            "managerFilePatterns": [
                "/package.json/"
            ],
            "matchStrings": [
                "$each(devEngines.runtimes, function($name, $version) { {\"depName\":$name, \"currentVersion\": $version, \"depType\": \"devDependencies\"}})"
            ],
            "datasourceTemplate": "npm"
        }
    ]
}